{% extends 'base.html.twig' %}

{% block title %}News page{% endblock %}

{% block body %} 
    <section class="content-section news news--single">
        <div class="container">
            <div class="news-item">
                <div class="news-img-wrap">
                    <div class="news-img" style="background-image: url({{ asset(news.imageUrl) }})"></div>
                </div>
                <h2 class="news-title">{{ news.title }}</h2>
                <div class="news-description">{{ news.description }}</div>
            </div>
        </div>
    </div>
</section>
{% endblock %}