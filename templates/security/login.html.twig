{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <section class="content-section signin d-flex align-items-center">
        <div class="container">
            <h2 class="content-section-title">Sign In</h2>

            <form method="post" class="form form--light">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-element">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-element" placeholder="Email" required autofocus />
                </div>

                <div class="form-element">
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required />
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                       >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class="form-element">
                    <button class="btn btn--base btn--lg" type="submit">Sign In</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}

{% block footer %}{% endblock %}