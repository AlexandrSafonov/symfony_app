<section class="content-section news">
    <div class="container">
        <div class="row">
            {% for item in news %}
                <div class="col-md-4">
                    <div class="news-item">
                        <div class="news-img-wrap">
                            <div class="news-img" style="background-image: url({{ asset(item.imageUrl) }})"></div>
                        </div>
                        <h2 class="news-title">{{ item.title }}</h2>
                        <div class="news-description">{{ item.description }}</div>
                        <div class="btn-wrap">
                            <a href="{{ path('news_single', {'id' : item.id}) }}" class="btn btn--base btn--md" title="Read More">Read More</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
