<section class="content-section news">
    <div class="container">
        <div class="row">
            {% for item in news %}
                <div class="col-md-4">
                    <div class="news-item">
                        <div class="news-img-wrap">
                            <div class="news-img" style="background-image: url({{ asset(item.imageUrl) }})"></div>
                        </div>
                        <h2 class="news-title">{{ item.title }}</h2>
                        <div class="news-description">{{ item.description }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        {% if news | length > 6 %} 
            <div class="btn-wrap">
                <a href="#" class="btn btn--base btn--lg" title="Read More">Read More</a>
            </div>
        {% endif %}
    </div>
</section>
